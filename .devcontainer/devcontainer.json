{
  "name": "Analyst Toolkit Deploy Dev",
  "image": "mcr.microsoft.com/devcontainers/base:jammy",
  "features": {
    "ghcr.io/devcontainers/features/conda:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/analyst_toolkit_deploy/bin/python",
        "python.analysis.extraPaths": ["./src"],
        "python.envFile": "${workspaceFolder}/.env"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}

